{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Verdl",
  "version": "0.1.0",
  "identifier": "com.verdl.downloader",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Verdl",
        "width": 1920,
        "height": 1080,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https://fonts.gstatic.com; connect-src 'self'; script-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  }
}
